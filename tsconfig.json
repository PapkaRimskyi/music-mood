{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@public/*": ["./public/*"],
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@index-page/*": ["./src/pages/index-page/*"],
      "@result-page/*": ["./src/pages/result-page/*"],
      "@favorite-page/*": ["./src/pages/favorite-page/*"],
      "@zustand/*": ["./src/zustand/*"],
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
